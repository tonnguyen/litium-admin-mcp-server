{
  "name": "litium-admin-mcp-server",
  "version": "2.0.0",
  "description": "HTTP-based MCP Server for Litium Admin Web API - provides tools for AI models to interact with Litium e-commerce platform via HTTP transport",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "serve": "next dev",
    "generate-types": "openapi-typescript openapi.json -o src/types/api.ts",
    "lint": "eslint app/**/*.ts src/**/*.ts",
    "lint:fix": "eslint app/**/*.ts src/**/*.ts --fix",
    "deploy": "vercel --prod",
    "docs:dev": "cd docs && mint dev"
  },
  "keywords": [
    "mcp",
    "litium",
    "e-commerce",
    "api",
    "typescript",
    "ai"
  ],
  "author": "Ton Nguyen",
  "license": "MIT",
  "dependencies": {
    "@vercel/node": "^5.4.1",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.5",
    "mcp-handler": "^1.0.3",
    "next": "^15.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.1",
    "@types/react": "19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "jsdom": "^27.1.0",
    "openapi-typescript": "^7.4.2",
    "tsx": "^4.19.2",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
